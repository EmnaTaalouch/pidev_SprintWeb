{% extends 'TemplateDashboard.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}

    <a href="{{ path('app_categorie_new') }}" class="btn btn-info">Creer Categorie</a>
<br>
    {% for message in app.flashes('info')  %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('info-edit')  %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('info-delete')  %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <br>
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">id</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.role }}</td>
                <td>
                    <a href="/categorie/edit/{{ categorie.id }}" class="btn btn-warning">Edit</a>
                    <a href="/categorie/delete/{{ categorie.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de supprimer ?');">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
