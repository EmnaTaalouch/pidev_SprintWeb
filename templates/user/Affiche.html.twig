{% extends 'TemplateDashboard.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <!-- Simple Datatable start -->
    <div class="card-box mb-30">
        <div class="pd-20">
            <h4 class="text-blue h4">La liste des utilisateurs</h4>
            <p class="mb-0"></p>
        </div>
        <div class="pb-20">
            <table border="1" class="table">
                <thead>
                <tr>

                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Login</th>
                    <th>Password</th>
                    <th>Role</th>
                    
                </tr>
                </thead>
                <tbody>
                {% for u in user %}
                <tr>
                    <td>{{ u.id }}</td>
                    <td>{{ u.nom }}</td>
                    <td>{{ u.prenom }}</td>
                    <td>{{ u.login }}</td>
                    <td>{{ u.password }}</td>
                    <td>{{ u.role }}</td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="{{ path('app_user_edit', {'id': u.id}) }}"><i class="dw dw-edit2"></i> Update</a>
                                <a class="dropdown-item" href="{{ path('app_user_delete', {'id': u.id}) }}"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="3" style="text-align: center;vertical-align: middle;" >no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="form-group row col-sm-12">
                <a class="btn btn-success" href="{{ path('ajouter') }}">Ajouter un nouveau utilisateur</a>
            </div>
        </div>
    </div>



{% endblock %}